{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "mpic++ build active file",
        "command": "$HOME/opt/usr/local/bin/mpic++",
        "args": [
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }